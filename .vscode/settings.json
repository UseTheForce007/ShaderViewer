{
    "clangd.arguments": [
        "--compile-commands-dir=${workspaceFolder}/build",
        "--background-index",
        "--clang-tidy",
        "--completion-style=detailed",
        "--header-insertion=iwyu",
        "--pch-storage=memory"
    ],
    "clangd.path": "clangd",
    "C_Cpp.intelliSenseEngine": "disabled",
    "files.associations": {
        "*.h": "cpp",
        "*.hpp": "cpp",
        "*.cpp": "cpp",
        "*.c": "c",
        "*.glsl": "glsl",
        "*.vert": "glsl",
        "*.frag": "glsl",
        "*.geom": "glsl",
        "*.comp": "glsl"
    },
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.generator": "Unix Makefiles"
}